<% @posts.each do |p| %>
 <div class="list-group">
  <div class="list-group-item">
    <h4 class="list-group-item-heading"><%= link_to p.title , p %></h4>
    <p class="list-group-item-text"><%= p.content %></p>
    <p class="list-group-item-text"><%= p.rcode %></p>
    </div>
</div>
<%end%>

<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <a href="posts" class="btn btn-primary btn-lg">View All Post</a>
  </div>
</div>
 